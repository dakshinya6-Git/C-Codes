#include <stdio.h>

int p(int a[], int l, int r){
    int m=(l+r)/2, t;
    t=a[l]; a[l]=a[m]; a[m]=t;
    
    int pv=a[l], i=l+1, j=r;
    while(i<=j){
        while(i<=r && a[i]<=pv) i++;
        while(a[j]>pv) j--;
        if(i<j){
            t=a[i]; a[i]=a[j]; a[j]=t;
        }
    }
    t=a[l]; a[l]=a[j]; a[j]=t;
    return j;
}

void qs(int a[], int l, int r){
    if(l<r){
        int pi=p(a,l,r);
        qs(a,l,pi-1);
        qs(a,pi+1,r);
    }
}

int main(){
    int n,i;
    printf("Enter n: ");
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++)
        scanf("%d",&a[i]);
    qs(a,0,n-1);
    printf("Sorted: ");
    for(i=0;i<n;i++)
        printf("%d ",a[i]);
    return 0;
}
